@page
@model HolaWeb.App.Frontend.Pages.ListModel
@{
}


<h1>Listado de los propietarios</h1>
<form method="get">
    <div class="form-group">

        <p>
            Email: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Nombre</td>
        <td>Apellido</td>
        <td>Telefono</td>
        <td>Edad</td>
        <td>Direccion</td>
        <td>Email</td>
        <td>Info</td>
        <td>Editar</td>
        <td>Eliminar</td>
    </tr>
    @foreach (var propietario in Model.Propietarios)
    {
        <tr>
            <td>@propietario.Nombre</td>
            <td>@propietario.Apellido</td>
            <td>@propietario.Telefono</td>
            <td>@propietario.Edad</td>
            <td>@propietario.Direccion</td>
            <td>@propietario.Email</td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-propietarioId="@propietario.Id">
                    <i class="fas fa-info-circle fa-lg"></i </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-propietarioId="@propietario.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-propietarioId="@propietario.Id">
                    <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
                </a>
            </td>

        </tr>
    }
</table>

<a asp-page=".\Registro" class="btn btn-primary">Registrar</a>